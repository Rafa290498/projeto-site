{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Abrir com Chrome - Projeto Web",
            "type": "chrome",
            "request": "launch",
            "file": "${workspaceFolder}/index.html",
            "webRoot": "${workspaceFolder}",
            "runtimeArgs": [
                "--new-window",
                "--disable-web-security",
                "--disable-gpu"
            ]
        }
    ]
}